#include<stdio.h>
#include<stdlib.h>
struct people
{
    char name[100];
    char gender[100];
    int age;
    char place[100];
};
void accept(struct people *P)
{
    printf("enter your name:\n");
    scanf("%s", P->name);
    printf("enter your gender:\n");
    scanf("%s", P->gender);
    printf("enter your age:\n");
    scanf("%d", &P->age);
    printf("enter your place:\n");
    scanf("%s", P->place);
    
}
void display(struct people P)
{
    printf(" name:%s\n",P.name);
	printf("gender: %s\n",P.gender);
	printf("age: %d\n",P.age);
	printf("Place: %s\n",P.place);
}
int main()
{
   struct people P;
   accept(&P);
   display(P);
   return 0;
}
